<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tyq.readprogress"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/book_icon"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.tyq.readprogress.MainActivity"
            android:theme="@style/TransparentTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tyq.readprogress.SearchAcitvity"
            android:label="搜索图书"
            android:theme="@style/CustomActionBarThemeBack" />
        <activity
            android:name="com.tyq.readprogress.ViewActivity"
            android:label="在读"
            android:theme="@style/CustomActionBarThemeBack" />
        <activity
            android:name="com.tyq.readprogress.AboutActivity"
            android:label="在读"
            android:theme="@style/CustomActionBarThemeBack" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>